<h1>Recipes<h1>

 <ul>
  <% @recipes.each do |r| %>
    <li><%= link_to r.name, recipe_path(r) %></li>
    <% end %>
  </ul>


<%= form_tag(recipes_path, method: "get") do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>
